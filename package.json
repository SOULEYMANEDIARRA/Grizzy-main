{
  "name": "grillz-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Site vitrine GRILL'Z - Restaurant de burgers fusion marocaine",
  "keywords": [
    "restaurant",
    "burger",
    "react",
    "morocco",
    "whatsapp"
  ],
  "author": "GRILL'Z Team",
  "license": "MIT",
 "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:server": "node server.js",
    "analyze": "npx vite-bundle-analyzer",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:all": "npm run build && npm run deploy:vercel && npm run deploy:netlify"
  },

  "dependencies": {
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
